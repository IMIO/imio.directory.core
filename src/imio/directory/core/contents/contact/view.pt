<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/@@main_template/macros/master"
      i18n:domain="imio.smartweb">
<body>

<metal:main fill-slot="main">

    <h1 class="documentFirstHeading" tal:content="context/Title" />

    <p class="documentDescription" tal:content="structure view/description" />

    <tal:block repeat="widget view/widgets/values">
        <div class="field" tal:condition="python:widget.__name__ not in ('IBasic.title', 'IBasic.description', 'title', 'description',)">
            <label tal:content="widget/label" />
            <br />
            <div tal:content="structure widget/render" />
        </div>
    </tal:block>

    <fieldset tal:repeat="group view/groups"
              tal:attributes="id python:''.join((group.prefix, 'groups.', group.__name__)).replace('.', '-')">
        <legend tal:content="group/label" />
        <div class="field" tal:repeat="widget group/widgets/values">
            <label tal:content="widget/label" />
            <br />
            <div tal:content="structure widget/render" />
        </div>
    </fieldset>

    <!-- Carousel wrapper -->
    <div
        id="carouselMultiItemExample"
        class="carousel slide carousel-dark text-center contact-gallery"
        data-mdb-ride="carousel"
        tal:define="images view/images"
        tal:condition="images">
        <!-- Controls -->
        <div class="d-flex justify-content-center mb-4">
            <button
              class="carousel-control-prev position-relative"
              type="button"
              data-mdb-target="#carouselMultiItemExample"
              data-mdb-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next position-relative"
                    type="button"
                    data-mdb-target="#carouselMultiItemExample"
                    data-mdb-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
        <!-- Inner -->
        <div class="carousel-inner py-4">
            <!-- Single item active-->
            <div class="carousel-item"
                 tal:repeat="row_images images">
                <div class="container">
                    <div class="row">
                        <!--  d-none d-lg-block-->
                        <div class="col-lg-4">
                            <div class="card"
                                 tal:repeat="image row_images">
                                <img tal:attributes="src string:${image/absolute_url}/@@images/image/mini;
                                                     alt image/title;
                                                     title image/title" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END Inner -->
    </div>
    <!-- END Carousel wrapper -->

    <div class="contact-files"
         tal:define="files view/files"
         tal:condition="files">
      <ul>
        <li tal:repeat="item files">
            <div tal:define="file_view nocall:item/@@file_view;
                             item_has_image python:item.getIcon;
                             thumb_scale view/get_thumb_scale_list;
                             image_scale item/@@images;">
              <a tal:attributes="href item/absolute_url;
                                 alt item/title">
                <span>
                    <img class="mime-icon"
                         tal:attributes="src file_view/get_mimetype_icon">
                    <span tal:content="item/title">Item Title</span>
                    <span class="discreet">&mdash; <span tal:replace="file_view/human_readable_size" /></span>
                </span>
                <p>
                  <span tal:replace="item/description" />
                </p>
                <img tal:replace="structure python:image_scale.tag('image', scale=thumb_scale)" />
              </a>
            </div>
        </li>
      </ul>
    </div>

    <div class="contact-site" tal:condition="context/urls">
        <tal:loop repeat="site context/urls">
            <span i18n:translate=""
                  tal:content="string:${site/type} : "></span>
            <a target="_blank"
               tal:attributes="href string:${site/url}"
               tal:content="string:${site/url}"></a>
        </tal:loop>
    </div>

    <tal:def tal:define="sub_contacts view/sub_contacts">
      <div class="sub_contacts" tal:condition="sub_contacts">
        <h3 i18n:translate="">Sub contacts</h3>
        <span tal:repeat="sub_contact_type sub_contacts">
          <h4 tal:content="sub_contact_type" />
          <ul>
            <li tal:repeat="sub_contact python: sub_contacts[sub_contact_type]">
              <a tal:attributes="href sub_contact/getURL" tal:content="sub_contact/Title"></a>
            </li>
          </ul>
        </span>
      </div>
    </tal:def>
</metal:main>

</body>
</html>
